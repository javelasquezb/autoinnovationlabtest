@model autoinnovationlabtest.Web.Models.CarViewModel
@{
    ViewData["Title"] = "Cars";
}

<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-body">
                    <h4 class="card-title">Carros</h4>
                    <hr>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Brands" class="col-form-label text-right"></label>
                            <select asp-for="BrandId" asp-items="Model.Brands" class="form-control"></select>
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table id="CarsTable" class="table table-bordered table-striped" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Id
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Model)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Year)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Brand)
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/car.js"></script>
}